datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  image       String
  price       Float
  stock       Int
  description String
  category    String
  createdAt   String
}

model User {
  id             String   @id @default(uuid()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  password String
  role Roles @default(Employee)
}

enum Roles {
  ADMIN
  Employee
}