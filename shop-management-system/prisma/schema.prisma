datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Entity {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  entityType    EntityType
  name          String?
  email         String?  @unique
  number        String?  @unique
  password      String?
  role          Roles?
  image         String?
  price         Float?
  quantity      Int?
  description   String?
  category      String?
  jsonPayload   String?
  modifiedOn    DateTime?
  modifiedBy    String?  @db.ObjectId
}

enum Roles {
  ADMIN
  Employee
}

enum EntityType {
  TRANSACTION
  ORDER
  CUSTOMER
  USER
  PRODUCT
}