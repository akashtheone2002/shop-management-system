datasource db {
  provider = "sqlserver"
  url      = "sqlserver://SURAJBANGADE;Database=shop-management-system;Integrated Security=true;"
}

generator client {
  provider = "prisma-client-js"
}

model Entity {
  id            String   @id @default(uuid()) @map("_id") @db.UniqueIdentifier
  entityType    String
  name          String?
  email         String?  @unique
  number        String?  @unique
  password      String?
  role          String?
  image         String?
  price         Float?
  quantity      Int?
  description   String?
  category      String?
  jsonPayload   String?
  modifiedOn    DateTime?
  modifiedBy    String?  @db.UniqueIdentifier
}
